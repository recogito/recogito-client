---
import BaseLayout from '@layouts/BaseLayout.astro';
import { ResetPasswordApp } from '@apps/auth-reset-password';
import '@themes/login/index.css';
---

<BaseLayout title='Recogito | Reset Password'>
  <div class='container'>
    <div class='column'>
      <ResetPasswordApp
        client:only='react'
      />
    </div>
  </div>
</BaseLayout>

<style>
  .container {
    align-items: center;
    bottom: 0;
    display: flex;
    justify-content: center;
    position: absolute;
    top: 0;
    width: 100%;
  }

  .column {
    max-width: 360px;
    padding: 0 20px;
    position: relative;
    width: 100%;
  }
</style>
