---
import { BrandFooter } from '@components/Branding/BrandFooter';
import { Logo } from '@components/Logo';
import { getTranslations } from '@i18n';
import HeaderLayout from '@layouts/HeaderLayout.astro';
import config from 'src/config.json';
import '@themes/login/index.css';

export interface Props {
  title: string;
}

const { title } = Astro.props;
const i18n = getTranslations(Astro.request, 'branding');
const { t } = i18n;

const backgroundColor = config.branding.background_color;
const loginLogo = config.branding.login_logo;
const splashURL = config.branding.home_banner;
const textColor = config.branding.contrast_color;
const useFooter = config.branding.bottom_logos_enabled;
---

<HeaderLayout footer={false} title={title}>
  <div class='content-container'>
    <main>
      <div class='slot-container'>
        { loginLogo && loginLogo.length > 0 && (
          <div class='top-logo'>
            <img src={`/img/branding/login/${loginLogo}`} />
          </div>
        )}
        <slot />
      </div>
      <div class='footer-container'>
        { useFooter && (
          <div class='bottom-logo'>
            <span>{t['powered by']}</span>
            <Logo
              color='#004F9F'
              contrastColor='black'
              height={42}
              width={230}
            />
          </div>
        )}
        <BrandFooter i18n={i18n} />
      </div>
    </main>
    <div class='img-container'>
      <img class='banner-img' src={splashURL} />
    </div>
  </div>
</HeaderLayout>

<style define:vars={{ backgroundColor, textColor }}>
  body {
    overflow: hidden;
  }

  .banner-img {
    object-fit: cover;
    width: 100%;
    height: 100%;
    overflow: hidden;
  }

  .content-container {
    display: flex;
    height: calc(100vh - 60px);
  }

  footer {
    align-items: center;
    background-color: var(--backgroundColor);
    color: var(--textColor);
    display: flex;
    height: 80px;
    justify-content: space-between;
    z-index: 1000;
  }

  .footer-container {
    flex-grow: 1;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    height: 100%;
  }

  .img-container {
    flex-basis: 60%;
    height: 100%;
  }

  .bottom-logo {
    display: flex;
    flex-direction: column;
    margin-top: 2em;
    flex-grow: 1;
    align-items: center;
  }

  main {
    display: flex;
    flex-direction: column;
    flex-grow: 1;
    min-height: calc(100vh - 100px);
  }

  .slot-container {
    padding: 0 80px;
  }

  .top-logo {
    margin: 2em 0 1em 0;
  }
</style>